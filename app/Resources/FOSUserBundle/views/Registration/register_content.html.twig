{% trans_default_domain 'FOSUserBundle' %}


<div class="container">
    <div class="row">
        <div class="col-md-3 col-md-offset-4">
            <h2 class="form-signin-heading">Zarejestruj się</h2>

            {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}

            {{ form_label(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}

            {{ form_label(form.username) }}
            {{ form_widget(form.username, {'attr': {'class': 'form-control','placeholder': 'Nazwa użytkownika'}}) }}

            {{ form_label(form.plainPassword.first) }}
            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control','placeholder': 'Hasło'}}) }}

            {{ form_label(form.plainPassword.second) }}
            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control','placeholder': 'Powtórz hasło'}}) }}

            {{ form_widget(form) }}

            <br>
            <div>
                <input type="submit" value="{{ 'registration.submit'|trans }}"/>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>










